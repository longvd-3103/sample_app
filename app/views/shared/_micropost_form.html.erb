<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".new_micropost") %>
  </div>
  <%= f.submit t(".submit_post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image.accept_img %>
  </span>
<% end %>
<%= javascript_pack_tag "validate_img", "data-turbolinks-track": "reload" %>
